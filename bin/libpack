#!/usr/bin/env node

const program = require("caporal");

const pkg = require("../package.json");

program
  .version(pkg.version)
  .description(pkg.description)
  .option(
    "-e, --entry <entry>",
    "Entry file path",
    program.STRING,
    "./index.js",
    true
  )
  .option(
    "-o --output <output>",
    "Output dir path",
    program.STRING,
    "./build/",
    true
  )
  .option("--cwd <cwd>", "Current work dir", program.STRING)
  .option("-w, --watch", "Watch the file change", program.BOOLEAN)
  .option("--server", "Server the file", program.BOOLEAN)
  .option(
    "--target <target>",
    "Build target, https://webpack.js.org/concepts/targets/",
    program.STRING,
    "web"
  )
  .option(
    "--prepack",
    "prepack the Javascript with facebook/prepack",
    program.BOOLEAN
  )
  .option(
    "--library <library>",
    "Output library name, default your package.json name field",
    program.STRING
  )
  .option(
    "--libraryTarget <libraryTarget>",
    "Output library target, https://webpack.js.org/configuration/output/#output-librarytarget",
    program.STRING,
    "umd"
  )
  .option(
    "--externals <externals>",
    "Externals library, eg. --externals react react-dom",
    program.LIST
  )
  .action(function(argv, options) {
    require("../index")(options).catch(err => {
      console.error(err);
    });
  });

program.parse(process.argv);
